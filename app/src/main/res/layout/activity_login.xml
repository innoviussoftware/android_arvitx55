<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgVwLogoLA"
                android:layout_width="@dimen/_120sdp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_arvi_blue_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/avenir_next_regular"
                android:gravity="center"
                android:text="Enter Kiosk ID"
                android:visibility="gone"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <RelativeLayout
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/light_blue_rounded_bg">

                <EditText
                    android:id="@+id/etIdLA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@null"
                    android:textSize="@dimen/_14ssp"
                    android:hint="Enter Company ID"
                    android:text=""
                    android:textColor="@color/black"
                    android:fontFamily="@font/avenir_next_regular"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/light_blue_rounded_bg">

                <EditText
                    android:id="@+id/etEmpIdLA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@null"
                    android:textSize="@dimen/_14ssp"
                    android:hint="Enter Employee ID"
                    android:text=""
                    android:textColor="@color/black"
                    android:fontFamily="@font/avenir_next_regular"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/light_blue_rounded_bg">

                <EditText
                    android:id="@+id/etPasswordLA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@null"
                    android:textSize="@dimen/_14ssp"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColor="@color/black"
                    android:fontFamily="@font/avenir_next_regular"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/avenir_next_regular"
                android:gravity="center"
                android:text="Select the location of\nInstallation"
                android:lineSpacingExtra="@dimen/_5sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <RelativeLayout
                android:id="@+id/rlCorporatesLA"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/light_blue_rounded_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_14ssp"
                    android:text="Corporates"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/avenir_next_regular"
                    />
                <ImageView
                    android:id="@+id/imgVwCorporateLA"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_blue_check"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/_15sdp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlCommercialLA"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/selected_location_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_14ssp"
                    android:text="Commercial Spaces"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/avenir_next_regular"
                    />
                <ImageView
                    android:id="@+id/imgVwComCheckLA"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_blue_check"
                    android:layout_marginRight="@dimen/_15sdp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="visible"
                android:background="@drawable/selected_location_bg">

                <Spinner
                    android:id="@+id/spModelLA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlNextLA"
                android:layout_width="@dimen/_250sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/grey_rounded_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/avenir_next_regular"
                    />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
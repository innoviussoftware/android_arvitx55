<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_toast_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_temp"
    android:gravity="center"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/imgVwPhotoDR"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:text=""
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:textSize="@dimen/_18ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/avenir_next_regular"
                />

            <TextView
                android:id="@+id/tvEmpIdDR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:textSize="@dimen/_18ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/avenir_next_regular"
                />
            <TextView
                android:id="@+id/tvDateDR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/avenir_next_regular"
                />
            <TextView
                android:id="@+id/tvTimeDR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/avenir_next_regular"
                />

            <TextView
                android:id="@+id/tvLocationDR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/avenir_next_regular"
                />

            <ImageView
                android:id="@+id/imgVwStatusDR"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@mipmap/ic_check_true"
                />

            <TextView
                android:id="@+id/tvMessageDR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textSize="@dimen/_18ssp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/avenir_next_regular"
                />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
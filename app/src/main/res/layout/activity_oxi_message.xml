<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/faceTopLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true"
    android:background="@drawable/defaultbg"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:visibility="visible" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitleOMA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/avenir_next_regular"
                android:text="Please insert your index finger inside the slot"
                android:lineSpacingExtra="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp"
                />
            <ImageView
                android:id="@+id/gifSGA"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_below="@+id/tvTitleOMA"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/finger"
                />

            <ImageView
                android:id="@+id/imgVwLogoLA"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:layout_below="@+id/gifSGA"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/ic_arvi_white_logo" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
